<!-- profileClient.ejs -->
<%- include('../partials/header') -%>

<title><%= param.name %> Profile</title>
<link rel="stylesheet" href="/css/bootstrap.min.css">

<link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="container">
        <%- include('../partials/sidebar') -%>
        <div class="main-content">
            <h1 class="mb-4">Batiment <%= param.name %></h1>

            <div class="row">
                <div class="col-md-6">
                    <table class="user-profile-table">
                        <tr>
                            <td>ID:</td>
                            <td><%= param.id %></td>
                        </tr>
                        <tr>
                            <td>Name:</td>
                            <td><%= param.name %></td>
                        </tr>
                        <tr>
                            <td>Adresse:</td>
                            <td><%= param.adresse %></td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <div class="photo-container">
                        <% if (param.photo) { %>
                            <img src="/images/bulidings/<%= param.photo %>" alt="Batiment Photo" class="img-fluid">
                        <% } else { %>
                            <p class="no-photo-message">No photo available</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="actions-container text-center mt-4">
                <a href="<%= param.id %>/edit" class="edit-button">Edit</a>
                <a href="<%= param.id %>/delete" class="delete-button" onclick="return confirmDelete()">Delete</a>
            </div>
        </div>
    </div>

    <script src="/js/delete.js"></script>
</body>
