<%- include('../partials/header') -%>
<title>Location, Etablissements</title>
<link rel="stylesheet" href="/css/user.css">
<link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="container">
        <%- include('../partials/sidebar') -%>
        <div class="main-content">
            <h1>Tous les établissements</h1>
            <table class="user-table">
                <thead>
                <tr>
                    <th>Nom</th>
                    
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                <% establishments.forEach(establishment => { %>
                    <tr>
                        <td><%= establishment.name %> </td>
                        <td align="center">
                            <a href="/establishments/<%= establishment.id %>/edit" class="view-profile-button">Modifier</a>
                        </td>
                        <td align="center">
                            <a href="/establishments/<%= establishment.id %>/delete" class="delete-button" onclick="return confirmDelete()">Supprimer</a>
                        </td>
                        
                    </tr>
                <% }) %>
                </tbody>
            </table>

            <a href='/establishments/create-establishment' class="add-user-button">Ajouter un établissement</a>
            <% if (typeof errorMessage !== 'undefined') { %>
                <div class="alert alert-danger mt-3">
                    <%= errorMessage %>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/delete.js"></script>

</body>
</html>