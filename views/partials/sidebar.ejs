<div class="sidebar" id="sidebar">
    <!-- Close icon -->
    <div class="close-icon" id="closeIcon">❌</div>
    <div class="user-profile">
        <a  href="/users/<%= `${user.id}` %>" class="username">👨‍💼 <%= `${user.firstName} ${user.lastName}` %></a>
    </div>

    <form class="form-group">
        <div class="input-group">
        <input type="text" placeholder="Search..." class="form-control search-input">
        <span class="inptu-group-btn">
            <button type="submit" class="btn btn-default">🔍</button>
        </span>
        </div>
    </form>

    <div class="sidebar-links">
        <a class="title" href="/dashboard"> 🏠 Accueil</a>
        <% if ( user.role === "superAdmin" || user.role === "kingAdmin") { %>
            <div class="dropdown">
                <h2 class="dropdown-toggle title" data-toggle="dropdown">👥 Etablissments</h2>
                <div class="dropdown-menu">
                    <a href="/establishments"> Etablissments</a>
                    <a href="/users"> Utilisateurs</a>
                    <a href="/clients"> Clients</a>
                </div>
            </div>
        <% } else if (user.role === "admin") { %>
            <div class="dropdown">
                <h2 class="dropdown-toggle title" data-toggle="dropdown">👥 Utilisateurs</h2>
                <div class="dropdown-menu">
                    <a href="/users"> Utilisateurs</a>
                    <a href="/clients"> Clients</a>
                </div>
            </div>
        <% } else { %>
            <a href="/clients" class=" title">👥 Clients</a>
        <% } %>    

        <div class="dropdown">
            <h2 class="dropdown-toggle title" data-toggle="dropdown">🏠 Bâtiments</h2>
            <div class="dropdown-menu">
                <a href="/batiments"> Bâtiments</a>
                <a href="/products"> Salles</a>
            </div>
        </div>

        <div class="dropdown">
            <h2 class="dropdown-toggle title" data-toggle="dropdown">📅 Reservations</h2>
            <div class="dropdown-menu">
                <a href="/reservations"> Reservations</a>
                <a href="/agenda"> Agenda</a>
            </div>
        </div>
                
        
        <a class="btn btn-outline-danger logout-button" href="/logout">🔓 Déconnexion</a>
    </div>

    
</div>

