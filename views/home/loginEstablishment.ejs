<%- include('../partials/header') -%>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Connexion</h4>
                </div>
                <div class="card-body">
                    <form action="/chooseEstablishment" method="POST">
                        <% if (typeof errorMessage !== 'undefined') { %>
                            <div class="alert alert-danger mt-3">
                                <%= errorMessage %>
                            </div>
                        <% } %>
                        <div class="mb-3">
                            <label for="establishmentId" class="form-label">Select Etablissement</label>
                            <select class="form-control" id="establishmentId" name="establishmentId" required>
                              <% establishments.forEach((establishment) => { %>
                              <option value="<%= establishment.id %>"><%= establishment.name %></option>
                              <% }); %>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
                            <!-- <a href="/register" class="btn btn-secondary">Signup</a> -->
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') -%>