<!-- profileClient.ejs -->
<%- include('../partials/header') -%>

<title><%= param.firstName %> <%= param.lastName %> Profile</title>
<link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="container">
        <%- include('../partials/sidebar') -%>
        <div class="main-content">
            <h1>Client Profile</h1>
            <table class="user-profile-table">
                <tr>
                    <td>ID:</td>
                    <td><%= param.id %></td>
                </tr>
                <tr>
                    <td>First Name:</td>
                    <td><%= param.firstName %></td>
                    
                </tr>
                <tr>
                    <td>Last Name:</td>
                    <td><%= param.lastName %></td>
                    
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><%= param.email %></td>
                    
                </tr>
                <tr>
                    <td>Phone Number:</td>
                    <td><%= param.phoneNumber %></td>
                    
                </tr>
                <tr>
                    <td colspan="3" align="center">
                        <a href="<%= param.id %>/edit" class="edit-button">Edit</a>
                        
                        <a href="<%= param.id %>/delete" class="delete-button" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>

<script src="/js/deleteUser.js"></script>


