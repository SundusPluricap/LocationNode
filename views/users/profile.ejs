<!-- profile.ejs -->
<%- include('../partials/header') -%>

<title><%= user.firstName %> <%= user.lastName %> Profile</title>
<link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="container">
        <%- include('../partials/sidebar') -%>
        <div class="main-content">
            <h1>User Profile</h1>
            <table class="user-profile-table">
                <tr>
                    <td>ID:</td>
                    <td><%= user.id %></td>
                </tr>
                <tr>
                    <td>First Name:</td>
                    <td><%= user.firstName %></td>
                    
                </tr>
                <tr>
                    <td>Last Name:</td>
                    <td><%= user.lastName %></td>
                    
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><%= user.email %></td>
                    
                </tr>
                <tr>
                    <td>Role:</td>
                    <td><%= user.role %></td>
                    
                </tr>
                <tr>
                    <td colspan="3" align="center">
                        <a href="<%= user.id %>/edit" class="edit-button">Edit</a>
                        
                        <a href="<%= user.id %>/delete" class="delete-button" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>

<script src="/js/deleteUser.js"></script>

<%- include('../partials/footer') -%>

